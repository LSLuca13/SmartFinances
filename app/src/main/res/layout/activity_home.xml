<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/ivNotificacao"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_notificacao" />


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/ivNotificacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_smartfinances" />


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:text="SmartFinances"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="4dp" />


    <TextView
        android:id="@+id/saudacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_marginTop="16dp"
        android:text="Ol치, Usu치rio"
        android:textSize="14sp"
        android:textColor="#333333" />


    <TextView
        android:id="@+id/valorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saudacao"
        android:text="R$5.200,00"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/valorTotal"
        android:layout_marginTop="85dp" />

    <TextView
        android:id="@+id/analiseTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pieChart"
        android:layout_marginTop="-210dp"
        android:text="An치lise de gr치ficos"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/menuInferior"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F0F0F0">


        <ImageView
            android:id="@+id/ivInicio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_inicio"
            android:layout_marginHorizontal="16dp" />


        <ImageView
            android:id="@+id/ivAdicionar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_adicionar"
            android:layout_marginHorizontal="16dp" />


        <ImageView
            android:id="@+id/ivOrcamento"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_orcamento"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/ivConta"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_conta"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>


</RelativeLayout>
